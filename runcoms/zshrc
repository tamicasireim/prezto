################################################################################
#                                  FZF                                         #
################################################################################

# Alt C to cd into selected directory
# C-R to search into history
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

export FZF_DEFAULT_COMMAND='ag -g ""'

